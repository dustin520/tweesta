

<div class="container">

  <div class="topBackground jumbotron">
    <h1 class="col-md-offset-1" id="topPage">Welcome to <i id="title">Tweesta</i> <br><small class="col-md-offset-1"><em><a name="pageTop">Discover life around you through tagged tweets and photos</a></em></small></h1>
  </div>

  <!-- <hr class="divider-featurette"> -->
  <div>
    <h3 class="col-md-12 text-center" ng-hide="showSearch">Try Now</h3>
  </div>
  <div ng-model="tryNow" ng-hide="showSearch">
    <button id="tryNowTwitter" class="btn btn-primary col-md-offset-4 col-md-2" ng-click="tweestas.tryMe()">
      <%= image_tag "twitter.png", height: '40px', width: '40px' %>
    </button>
  </div>
  <div ng-model="tryNow" ng-hide="showSearch">
    <button id="tryNowBtn" class="btn btn-primary col-md-2" ng-click="tweestas.tryMe()">
      <%= image_tag "instagram.png", height: '40px', width: '40px' %>
    </button>
  </div>

  <br><br>
  <div ng-show="tryNow">
    <div class="row text-center col-md-offset-3 col-md-6" ng-model="renderContent">
      <!-- SEARCH FOR PHOTO AND TWEET BY TAG -->
        <form ng-submit="tweestas.searchTag(newTag)">
          <input type="text" ng-model="newTag" autofocus required placeholder="Search by tag" class="form-control text-center">
          <button class="form-control btn btn-primary" id="searchButton">Search</button>
        </form>
          <button ng-click="tweestas.saveTag(newTag)" ng-show="renderContent" ng-model="newTag" class="btn form-control" id="saveTagButton">Save Tag</button>
          <button ng-show="renderContent" ng-click="tweestas.deleteTag()" class="form-control btn btn-success" id="clearButton">Clear all</button>
    </div>
  </div>


  <br><br>

  <!-- DISPLAY TAGS -->
  <div class="row col-md-offset-3 col-md-6 text-center tagsBackground id="tagArea"">
    <span class="text-center" ng-repeat="tags in tweestas.tagArray track by $index">
      <button class="tagsDisplay tagButton" id="tagButton" ng-click="tweestas.searchTag(tags)">#{{tags}}</button>
    </span>
  </div>

  <div class="container">



      <div class="row col-md-6" ng-show="renderContent">
        <!-- DISPLAY TWEETS -->
        <h2 class="text-center">
          <a href="https://twitter.com/">
            <%= image_tag "twitter.png", height: '30px', width: '30px' %>
          </a>
          TWITTER TWEETS
        </h2>
       <ul ng-repeat="saved in tweestas.saved track by $index">
          <blockquote class="col-md-6" ng-repeat="obj in saved.twitter track by $index">
            {{obj.text}}{{$index}}
          </blockquote>
        </ul>

      </div>

    <div class="row col-md-6" ng-show="renderContent">

        <h2 class="text-center">
          <a href="https://instagram.com">
            <%= image_tag "instagram.png", height: '30px', width: '30px' %>
          </a>
          INSTAGRAM PHOTOS
        </h2>

        <ul ng-repeat="save in tweestas.saved track by $index">
          <ul ng-repeat="obj in save.instagram track by $index">
            <div class="thumbnail col-md-4">
              <img src="{{obj.images.low_resolution.url}}" height="300px" width="300px" alt="instagram photo" class="img-responsive img-rounded">
              <!-- <p class="caption" height="100px" width="100px">{{obj.caption.text}}</p> -->
            </div>
          </ul>
        </ul>

    </div>
    <br><br><br>

  <!-- RE-RUN SEARCH FUNCTION, LOAD MORE -->
  <br><br>
  <div class="row" ng-show="renderContent">
    <button ng-click="tweestas.loadMore(newTag)" ng-model="newTag" class="col-md-offset-5 col-md-2 text-center btn btn-info" id="moreButton">More</button>
  </div>
    <a href="#pageTop" ng-show="renderContent" class="text-right col-md-offset-11"><i class="fa fa-arrow-circle-o-up fa-3x"></i></a>


  </div>

</div>
